---
export interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<li class="flex list-none rounded-lg p-2">
  <a class="w-full rounded-md bg-white py-4 px-5 leading-6 text-gray-900 no-underline opacity-80" {href}>
    <h2 class="m-0 text-xl focus-within:text-indigo-700 hover:text-indigo-700">
      {title}
      <span class="inline-block">&rarr;</span>
    </h2>
    <p class="mt-3 mb-0">
      {body}
    </p>
  </a>
</li>
